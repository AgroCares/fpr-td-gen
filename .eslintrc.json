{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin",
        "eslint-plugin-tsdoc"
    ],
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
        "vite.config.ts",
        "jest.config.js",
        "/dist"
    ]
}